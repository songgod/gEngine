<UserControl x:Class="gEngine.Project.Controls.ProjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gEngine.Project.Controls"
             xmlns:cvt="clr-namespace:gEngine.Project.Converter"
             x:Name="UserControl_Project"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <cvt:MapIndexConverter x:Key="micvt"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <local:MapsControl MapsSource="{Binding Path=Project.OpenMaps, ElementName=UserControl_Project}" Grid.Column="0" x:Name="tc"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <local:LayerMgrControl x:Name="layermgr" MapSource="{Binding Path=Project.OpenMaps.CurrentIndex, ElementName=UserControl_Project, Converter={StaticResource micvt}, Mode=OneWay}"  Grid.Row="0"/>
            <local:ToolsControl x:Name="toolcontrol" DataContext="{Binding ElementName=tc}" Grid.Row="1"/>
        </Grid>
    </Grid>
</UserControl>
