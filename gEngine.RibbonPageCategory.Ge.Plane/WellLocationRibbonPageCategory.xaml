                    <dxe:TextEditSettings x:Uid="dxe:TextEditSettings_7"/>
                </dxb:BarEditItem.EditSettings>
            </dxb:BarEditItem>
            <dxb:BarEditItem x:Uid="dxb:BarEditItem_33" Content="宽度" EditWidth="100"   
