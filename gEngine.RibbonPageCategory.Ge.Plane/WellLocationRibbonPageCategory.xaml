                    <dxe:TextEditSettings  />
                </dxb:BarEditItem.EditSettings>
            </dxb:BarEditItem>
            <dxb:BarEditItem Content="高度" EditWidth="100"
                            EditValue="{Binding Path=PointStyle.Height, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" >
                <dxb:BarEditItem.EditSettings>
                    <dxe:TextEditSettings   />
                </dxb:BarEditItem.EditSettings>
            </dxb:BarEditItem>
            <dxb:BarEditItem x:Uid="dxb:BarEditItem_34" Content="内部色" EditWidth="100" 
                             EditValue="{Binding Path=PointStyle.Fill.Color, Mode=TwoWay}">
                <dxb:BarEditItem.EditSettings>
                    <dxe:PopupColorEditSettings x:Uid="dxe:PopupColorEditSettings_11"/>
                </dxb:BarEditItem.EditSettings>
            </dxb:BarEditItem>
            <dxb:BarEditItem  x:Uid="dxb:BarEditItem_35" Content="边界色" EditWidth="100" 
                              EditValue="{Binding Path=PointStyle.Stroke.Color, Mode=TwoWay}">
                <dxb:BarEditItem.EditSettings>
                    <dxe:PopupColorEditSettings x:Uid="dxe:PopupColorEditSettings_12" />
                </dxb:BarEditItem.EditSettings>
            </dxb:BarEditItem>
            <dxb:BarSplitButtonItem Content="点风格"  LargeGlyph="{dx:DXImage Image=LineStyle_32x32.png}" x:Name="bsbPointStyle"
