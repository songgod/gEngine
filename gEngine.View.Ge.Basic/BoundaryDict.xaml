<ResourceDictionary x:Class="gEngine.View.Ge.Basic.BoundaryDict"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gb="clr-namespace:gEngine.Graph.Ge.Basic;assembly=gEngine.Graph.Ge.Basic"
             xmlns:local="clr-namespace:gEngine.View.Ge.Basic"
             xmlns:gv="clr-namespace:gEngine.View.Ge;assembly=gEngine.View.Ge"
             mc:Ignorable="d">
    <DataTemplate DataType="{x:Type gb:Boundary}">
        <!--<Polygon Points="{Binding Points}" StrokeThickness="{Binding StrokeThickness}" Stroke="{Binding Stroke}" Fill="{Binding Fill}">
        </Polygon>-->
      
        <gv:FillControl  FillStyle="{Binding FillStyle}">
            <gv:FillControl.Resources>
                <local:Ponits2FillPathGeometryConverter x:Key="p2plpgc"/>
                <gv:FillStyle2BrushConverter x:Key="f2b"/>
            </gv:FillControl.Resources>
            <gv:FillControl.Data>
                <Binding Path="Points" Converter="{StaticResource p2plpgc}"/>
            </gv:FillControl.Data>
        </gv:FillControl>
    </DataTemplate>
</ResourceDictionary>
