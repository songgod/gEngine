<ItemsControl x:Class="gEngine.View.LayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gEngine.View"
             mc:Ignorable="d"
              ItemsSource="{Binding Objects}"
              Opacity="{Binding Opacity, Mode=TwoWay}"
             d:DesignHeight="300" d:DesignWidth="300">
    <ItemsControl.Resources>
        <local:BoolVisibilityConverter x:Key="bvc"/>
    </ItemsControl.Resources>
    <ItemsControl.Visibility>
        <Binding Path="Visible" Converter="{StaticResource bvc}" Mode="TwoWay"/>
    </ItemsControl.Visibility>
    <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas x:Name="layerpanel"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <local:ObjectControl x:Name="objectcontrol" Content="{Binding}"/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
