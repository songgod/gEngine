<UserControl x:Class="gEngine.View.MapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gEngine.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Background="White" 
              ClipToBounds="True"
             IsManipulationEnabled="True" Focusable="True"
             Loaded="UserControl_Loaded">
    <AdornerDecorator>
        <Grid x:Name="root">
            <Canvas x:Name="BackGroundCanvas" Background="Transparent"/>
            <ItemsControl x:Name="layeritemscontrol" ItemsSource="{Binding Layers}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas x:Name="mappanel"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:LayerControl x:Name="layercontrol"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Canvas x:Name="EditCanvas" Background="Transparent" IsHitTestVisible="False" />
        </Grid>
    </AdornerDecorator>
</UserControl>
