<ContentControl x:Class="gEngine.View.ObjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gEngine.View"
             mc:Ignorable="d"
                Opacity="{Binding Opacity}"
             d:DesignHeight="300" d:DesignWidth="300">
    <ContentControl.Resources>
        <local:BoolVisibilityConverter x:Key="bvc"/>
    </ContentControl.Resources>
    <ContentControl.Visibility>
        <Binding Path="Visible" Converter="{StaticResource bvc}" Mode="TwoWay"/>
    </ContentControl.Visibility>
    <ContentControl.ContentTemplateSelector>
        <local:DataTemplateChooser/>
    </ContentControl.ContentTemplateSelector>
</ContentControl>
