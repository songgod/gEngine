<Window x:Class="gEngineTest.PolyLine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gEngineTest.PolyLine"
        xmlns:v="clr-namespace:gEngine.View;assembly=gEngine.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <v:MapControl x:Name="mc" Grid.Row="0" DataContext="{Binding MapContext}"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button x:Name="DrawPolyLine" Content="DrawPolyLine" Click="DrawPolyLine_Click"/>
            <Button x:Name="DrawBezier" Content="DrawBezier" Click="DrawBezier_Click"/>
        </StackPanel>
    </Grid>
</Window>
